#
# remove LXDE and install latest QtMoko
#

fgrep -q 'http://qtmoko.sourceforge.net/debian/gta04' /etc/apt/sources.list || echo 'deb http://qtmoko.sourceforge.net/debian/gta04 /' >>/etc/apt/sources.list
fgrep -q 'http://qtmoko.sourceforge.net/apps' /etc/apt/sources.list || echo 'deb http://qtmoko.sourceforge.net/apps /' >>/etc/apt/sources.list

apt-get update || exit 1
apt-get remove -y lxde xorg || exit 1
apt-get autoremove -y || exit 1
apt-get upgrade -q || exit 1
apt-get install -y qtmoko-gta04 || exit 1

# check if kernel 2.6.32

# edit /opt/qtmoko/qpe.env for 2.6.32 kernel:

# export TSLIB_TSDEVICE=/dev/input/event1
# /etc/init.d/bluetooth stop
# rm /opt/qtmoko/bin/gsm-voice-routing - if no modem installed

