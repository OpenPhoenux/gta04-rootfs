#
# start fm demo
#
# fm-demo freq-in-MHz
#

trap "./si4721 /dev/i2c-2 0" INT TERM EXIT	# turn off after exit of this script

make si4721

FREQ=$1; [ "$1" ] || FREQ=92.4

#### NOT TESTED ####

echo ./si4721 /dev/i2c-2 $(python -c "print '%.0f' % ($FREQ*100)")
./si4721 /dev/i2c-2 $(python -c "print '%.0f' % ($FREQ*100)") 48000

# arecord -fS16_LE -r8000 | aplay -Dhw:1,0 &	# microphone -> transmitter
arecord -Dhw:1,0 -fS16_LE -r48000 | aplay	# receiver -> earpiece, speaker, headset
